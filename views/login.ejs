<!DOCTYPE html>
<html lang="en" dir="ltr">
  <%- include ./partials/head.ejs %>

  <body>
      <%- include ./partials/navBar %>


      <div class="container">

        <div class="row mt-4 pt-5">

          <div class="col-6 mx-auto border border-white shadow-lg p-4 bg-white rounded mt-4">

            <h3 class="text-center">Log In</h3>

            <%- include ./partials/flashMessage.ejs %>

            <form action="/login" method="post">
                  <%- include ./partials/csrfToken.ejs%>
                  <div class="form-group">
                    <label for="email">Email address</label>
                    <input name="email" type="email" class="form-control" id="email" aria-describedby="emailHelp" required=true>
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                  </div>
                  <div class="form-group">
                    <label for="password">Password</label>
                    <input name="password" type="password" class="form-control" id="password" aria-describedby="passwordHelp" required=true>
                  </div>
                  <div class="form-group">
                      <button type="submit" name="button" class="btn btn-info btn-block mt-2">Submit</button>
                  </div>
            </form>

            <p class="mt-2"><a href="/forgotPassword">Forgot Password?</a></p>
            <p class="mt-2"><a href="#">New user?</a></p>
          </div>
        </div>

      </div>
  </body>
</html>
